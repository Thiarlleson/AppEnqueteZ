<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thiarlleson.enquentez.TelaPersonalizarEnquente"
    android:background="@drawable/fundo_principal">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarPersonalizarEnquete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/toolbarPersonalizarEnquete"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:text="Localização"
        android:textSize="26dp" />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/switch2"
        android:layout_alignStart="@+id/switch2"
        android:layout_below="@+id/switch2"
        android:layout_marginTop="48dp"
        android:text="Faixa Etária"
        android:textSize="25dp" />

    <Switch
        android:id="@+id/switch4"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/switch3"
        android:layout_alignStart="@+id/switch3"
        android:layout_below="@+id/switch3"
        android:layout_marginTop="59dp"
        android:text="Convidar por Token"
        android:textSize="25dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="Criar"
        android:background="@drawable/estilo_botao_cadastrar"
        android:onClick="btnAddHome"/>

</RelativeLayout>
