<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_principal"
    tools:context="com.example.thiarlleson.enquentez.TelaPrincipal"
    >


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:text="Logar"
        android:onClick="btnLogar"
        android:padding="20dp"
        android:background="@drawable/estilo_botao_logar"/>

    <TextView
        android:id="@+id/TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:text="Enquetes Mais Votadas"
        android:textSize="30dp"
        android:textAlignment="center"
        android:typeface="monospace"/>

    <ListView
        android:id="@+id/listViewPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="20dp"
         />


</RelativeLayout>
